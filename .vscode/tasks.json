{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run_batch",
            "type": "shell",
            "command": "gcc ./main.c -o main -Wall -std=c99 -Wno-missing-braces -I include/ -L lib/ -lraylib -lopengl32 -lgdi32 -lwinmm && main",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "revealProblems": "onProblem",
                "clear": true,
                "showReuseMessage": false,
                "focus": false,
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}